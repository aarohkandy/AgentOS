# Cosmic OS KDE Global Shortcuts
# Install: kwriteconfig5 --file kglobalshortcutsrc --group cosmic-ai --key "toggle-sidebar" "Super+Shift,Super+Shift,Toggle Cosmic AI Sidebar"

[cosmic-ai]
_k_friendly_name=Cosmic AI
toggle-sidebar=Super+Shift,Super+Shift,Toggle Cosmic AI Sidebar
execute-last-plan=Ctrl+Shift+Return,none,Execute Last Plan
cancel-execution=Ctrl+Shift+Escape,none,Cancel Execution
take-screenshot=Ctrl+Shift+S,none,Screenshot for AI

[cosmic-ai-debug]
_k_friendly_name=Cosmic AI Debug
reload-ai-daemon=Ctrl+Alt+R,none,Reload AI Daemon
show-ai-logs=Ctrl+Alt+L,none,Show AI Logs
toggle-safe-mode=Ctrl+Alt+S,none,Toggle Safe Mode
