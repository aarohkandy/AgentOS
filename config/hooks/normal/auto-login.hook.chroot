#!/bin/bash
# Enable auto-login for user 'agentOS'

# Create default user
useradd -m -s /bin/bash agentOS
echo "agentOS:agentOS" | chpasswd
usermod -aG sudo agentOS

# Configure LightDM for auto-login
mkdir -p /etc/lightdm/lightdm.conf.d
cat > /etc/lightdm/lightdm.conf.d/50-autologin.conf << 'LIGHTDM'
[Seat:*]
autologin-user=agentOS
autologin-user-timeout=0
LIGHTDM

echo "Auto-login configured for user: agentOS"
